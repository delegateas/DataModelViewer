<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Suppress warnings not critical for utility tools -->
    <NoWarn>$(NoWarn);IDE0005;CA1303;CA1308;MA0011;SA1122;SA1513;SA1518;MA0009;MA0023;CA1031;CA2234;MA0002;CA1849</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerPlatform.Dataverse.Client" Version="1.2.*" />
    <PackageReference Include="Azure.Identity" Version="1.13.*" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.*" />
  </ItemGroup>

</Project>
